{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Candidature de {{ candidat.nom }} {{ candidat.prenoms }}{% endblock %}

{% block body %}
	<div class="wrapper page-secondaire">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h5 class="titre">Formulaire</h5>
				</div>
			</div>
			<form action="{{ path('candidat_new') }}" method="post">
			<div class="row">
				<div class="col">
						<h6 class="scoute">Informations scoutes</h6>
						<div class="info-scoute row form-group">
							<div class="col-md-6">
								<label for="scout_nom" class="form-label">Nom</label>
								<input type="text" class="form-control" value="{{ candidat.nom }}" readonly>
							</div>
							<div class="col-md-6">
								<label for="scout_prenom" class="form-label">Prenoms</label>
								<input type="text" class="form-control" value="{{ candidat.prenoms }}" readonly>
							</div>
							<div class="col-md-6">
								<label for="scout_datenaissance" class="form-label">Date de naissance</label>
								<input type="date" class="form-control" value="{{ candidat.dateNaissance }}" readonly>
							</div>
							<div class="col-md-6">
								<label for="scout_lieunaissance" class="form-label">Date de naissance</label>
								<input type="text" class="form-control" value="{{ candidat.lieuNaissance }}" readonly>
							</div>
							<div class="col-md-6">
								<label for="scout_region" class="form-label">Region</label>
								<input type="text" class="form-control" value="{{ candidat.groupe.district.region.nom }}" readonly>
							</div>
							<div class="col-md-6">
								<label for="scout_fonction" class="form-label">Fonction</label>
								<input type="text" class="form-control" value="{{ candidat.fonction }}" readonly>
							</div>
							<div class="col-md-6">
								<label for="scout_matricule" class="form-label">Matricule</label>
								<input type="text" class="form-control" value="{{ candidat.matricule }}" readonly>
							</div>
							<div class="col-md-6">
								<label for="scout_cartescoute" class="form-label">Carte scoute</label>
								<input type="text" class="form-control" value="{{ candidat.carte }}" readonly>
							</div>
							<div class="col-md-6">
								<label for="scout_dateentree" class="form-label">Date d'entrée dans le scoutisme <span style="color: red; font-size: .9rem; font-weight:bold;">*</span></label>
								<input type="date" class="form-control" name="scout_dateentree" required autocomplete="off">
							</div>
						</div>

						<h6 class="perso">Informations professionnelles</h6>
						<div class="info-perso row form-group">
							<div class="col-md-6">
								<label for="scout_etude" class="form-label">Niveau d'étude</label>
								<select name="scout_niveau_etude" id="" class="form-control">
									<option value="">-- Selectionnez votre niveau d'étude --</option>
									<option value=""></option>
									<option value="COLLEGE">COLLEGE</option>
									<option value="LYCEE">LYCEE</option>
									<option value="BAC">BAC</option>
									<option value="BAC+1">BAC + 1</option>
									<option value="BAC+2"> BAC + 2</option>
									<option value="BAC+3">BAC + 3</option>
									<option value="BAC+4">BAC + 4</option>
									<option value="BAC+5">BAC + 5</option>
									<option value="BAC+6">BAC + 6</option>
									<option value="BAC+7+">BAC + 7+</option>
								</select>
							</div>
							<div class="col-md-6">
								<label for="scout_profession" class="form-label">Profession actuelle</label>
								<input type="text" class="form-control" name="scout_profession" autocomplete="off">
							</div>
							<div class="col-md-6">
								<label for="scout_residence" class="form-label">Lieu de résidence</label>
								<input type="text" class="form-control" name="scout_residence" autocomplete="off">
							</div>
							<div class="col-md-6">
								<label for="scout_email" class="form-label">Adresse email</label>
								<input type="email" class="form-control" name="scout_email" autocomplete="off">
							</div>
							<div class="col-md-6">
								<label for="scout_contact" class="form-label">Contact</label>
								<input type="text" class="form-control" name="scout_contact" autocomplete="off">
							</div>
						</div>
				</div>
			</div>
			<div class="row">
				<div class="col bouton text-right">
					<input type="hidden" name="scout_candidat" value="{{ candidat.matricule }}">
					<a href="{{ path('app_home') }}" class="btn btn-outline-secondary btn-lg"><i class="las la-reply"></i> Paiement</a>
					<button type="submit" class="btn btn-primary btn-lg"><i class="las la-save"></i> Enregistrer </button>
				</div>
			</div>
			</form>
		</div>
	</div>
{% endblock %}
