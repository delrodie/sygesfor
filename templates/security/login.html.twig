{% extends 'security.html.twig' %}

{% block title %}{{parent()}} Connexion{% endblock %}

{% block body %}
    <h1>Connexion</h1>
<form method="post">
    {% if error %}
        <div class="alert danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% for label, messages in app.flashes(['success', 'danger']) %}
        {% for message in messages %}
            <div class="flash-{{ label }}" style="margin-bottom: 25px;">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="txt_field">
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" autocomplete="username" required autofocus>
        <span></span>
        <label>Nom utilisateur</label>
    </div>
    <div class="txt_field">
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        <span></span>
        <label>Mot de passe</label>
    </div>
    <div class="pass">.</div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}


    <div class="pass"></div>
    <input type="submit" value="Connexion">
    <div class="signup_link">.</div>
</form>

{% endblock %}
